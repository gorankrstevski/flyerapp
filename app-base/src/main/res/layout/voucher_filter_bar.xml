<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:elevation="2dp"
    tools:ignore="Overdraw">

    <LinearLayout
        android:id="@+id/code_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/cn_app_code"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/code_btn_checkmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="3dp"
            android:background="@drawable/round_checkbox_bg"
            android:padding="3dp"
            app:srcCompat="@drawable/ic_check_black_24dp"
            android:tint="@color/text_color_light_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deal_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/cn_app_deal"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/deal_btn_checkmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="3dp"
            android:background="@drawable/round_checkbox_bg"
            android:padding="3dp"
            app:srcCompat="@drawable/ic_check_black_24dp"
            android:tint="@color/text_color_light_gray" />
    </LinearLayout>
</LinearLayout>